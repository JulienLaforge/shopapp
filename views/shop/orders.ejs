<%- include('../includes/navigation.ejs') %>

<main>
  <% if(orders.length <= 0) { %>
  <h1>No orders.</h1>
  <% } else { %>
    <ul>
      <% orders.forEach(order => { %>
        <li>
          <h1>#<%= order.id %></h1>
          <ul>
            <% order.products.forEach(product => { %>
              <li><%= product.title %> (<%= product.orderProduct.quantity %>)</li>
            <% }); %>
          </ul>
        </li>
      <% }); %>
    </ul>
  <% } %>
  </main>

